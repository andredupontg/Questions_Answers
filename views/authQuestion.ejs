<%- include("partials/header") %>

<main role="main" class="inner cover">
    <h1 class="cover-heading">Tienes algo en mente que pueda ayudar a nuestro compa√±ero?</h1>
    <form class="formulario" method="POST" action="/authQuestions/:pregunta">
        <div class="form-floating">
            <input type="text" class="form-control" name="title" id="floatingInput" placeholder="Titulo de la pregunta" autocomplete="off">
            <textarea name="content" rows="5" cols="80"></textarea>
            <input type="text" class="form-control" name="username" id="floatingInput" placeholder="Username" autocomplete="off">
        </div>
        <button class="w-100 btn btn-lg btn-primary botones" type="submit">Responder</button>
    </form>
    <a href="/authQuestions" class="btn btn-lg btn-secondary botones">Ver todas las preguntas</a>
    <div class="card pregunta" style="width: 25rem;">
        <div class="card-header titulo">
            <%=question.title%>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item contenido"><%=question.content%></li>
        </ul>
        <ul class="list-group list-group-flush">
            <li class="list-group-item contenido">por <%=question.user.username%> </li>
        </ul>
    </div>
    <% answers.forEach((answer) => {%>
        <div class="card respuesta" style="width: 25rem;">
            <div class="card-header">
                <%=answer.content%>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item contenido">por <%=answer.user.username%> </li>
            </ul>
        </div>
    <%})%>
</main>
<script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
<script>
    CKEDITOR.replace("content");
</script>

<%- include("partials/footer") %>